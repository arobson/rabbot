# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# spaces in JS unless otherwise specified
[**.js]
indent_style = space
indent_size = 2

[**.jsx]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.md]
indent_style = space
indent_size = 2
